<%= render "shared/header" %>
<div class="container mt-50">
  <div class="container mt-10 ">
    <%= form_with model: @transportation_expense, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %> 
      <div class="weight-bold-text">
        ご利用の国内配送方法を入力してください
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :name, class:"transportation-expense-name-text", id:"transportation-expense-name-text", placeholder:"佐川100サイズ" %>
      <div class="weight-bold-text">
        ご利用の国内配送方法の送料を入力してください
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :price, class:"transportation-expense-price-text", id:"transportation-expense-price-text", placeholder:"700" %>円
      <div class="weight-bold-text mt-2">  
        <%= f.submit "登録する", class: "btn btn-warning mt-10 "%>
      </div>
    <% end %>
  </div>
</div>

