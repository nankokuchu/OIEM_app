<div class="container mt-50">
  <div class="container">
    <div class="container">
    追跡番号、重さ登録ページ
    </div>
  </div>
  <div class="container">
    <%= form_with model: @info, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %> 
    <div class="weight-bold-text">
        追跡番号
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :info_order_tracking_number, class:"items-text", id:"info-order-tracking-number", placeholder:"追跡番号を入力" %>
      <div class="weight-bold-text">

    <div class="weight-bold-text">
      重さ
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :info_order_weight, class:"items-text", id:"info-order-weight", placeholder:"重さをKG単位で入力)" %>
    <div class="weight-bold-text">  
    <%= f.submit "登録する", class: "btn btn-warning"%>
    <% end %>
  </div>
</div>