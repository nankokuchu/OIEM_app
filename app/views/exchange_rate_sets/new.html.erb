<% breadcrumb :exchange_rate %>
<%= render "shared/header" %>
<div class="container mt-50">
  <div class="container mt-10 ">
    <%= form_with model: @exchange_rate, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %> 
      <div class="weight-bold-text">
        通貨をお選びください
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:exchange_country_id, ExchangeCountry.all, :id, :country, {}, {class:"select-box", id:"exchange-country"}) %>
      <div class="weight-bold-text">
        為替レート(お選びの通貨/日本(JPY))
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :rate, class:"exchange-rate-text", id:"exchange-rate-text", placeholder:"お選びの通貨/日本(JPY)" %>
      <div class="weight-bold-text mt-2">  
        <%= f.submit "登録する", class: "btn btn-warning mt-10 "%>
      </div>
    <% end %>
  </div>
</div>

